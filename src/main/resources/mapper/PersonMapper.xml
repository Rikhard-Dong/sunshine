<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfmes.sunshine.dao.PersonDao">

    <select id="findByPersonId" resultType="com.hfmes.sunshine.domain.Person">
        select *
        from T_Person
        where PersonId = #{personId}
    </select>

    <select id="findByCardNo" resultType="com.hfmes.sunshine.domain.Person">
        select *
        from T_Person
        where CardNo = #{cardNo}
    </select>
</mapper>