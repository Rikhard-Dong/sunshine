<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfmes.sunshine.dao.PersonDao">

    <resultMap id="personResult" type="com.hfmes.sunshine.domain.Person">
        <association property="dept" column="DeptId" javaType="com.hfmes.sunshine.domain.Dept"
                     resultMap="com.hfmes.sunshine.dao.DeptDao.deptResult"/>
    </resultMap>

    <select id="findByPersonId" resultMap="personResult">
        select
            p.*,
            d.*
        from T_Person p left join T_Dept d on p.DeptId = d.DeptId
        where PersonId = #{personId}
    </select>

    <select id="findByCardNo" resultType="com.hfmes.sunshine.domain.Person">
        select *
        from T_Person
        where CardNo = #{cardNo}
    </select>

    <select id="findAll" resultType="com.hfmes.sunshine.domain.Person">
        select *
        from T_Person;
    </select>
</mapper>